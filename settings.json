{
    "application": {
        "single_instance_guid": ""
    },
    "debugging": {
        "show_console": false,
        "log_level": "DEBUG4",
        "log_file": "debug.log"
    },
    "main_window": {
        "title": "Bakery",
        "icon": "",
        "default_size": [1024, 800],
        "minimum_size": [800, 600],
        "maximum_size": [0, 0],
        "disable_maximize_button": false,
        "center_on_screen": true,
        "start_maximized": true
    },
    "popup_window": {
        "icon": "",
        "fixed_title": ""
    },
    "web_server": {
        "listen_on": ["127.0.0.1", 0],
        "www_directory": "www",
        "index_files": ["index.html", "index.php"],
        "cgi_interpreter": "php/php-cgi.exe",
        "cgi_extensions": ["php"],
        "cgi_temp_dir": "",
        "404_handler": "/pretty-urls.php"
    },
    "msie": {
        "error_page": "www/_error-page.html",
        "smooth_scroll": false,
        "enable_f5_refresh": false,
        "show_context_menu": true,
        "use_themes": true,
        "disable_script_debugger": true,
        "hide_dialog_boxes": false,
        "silent_operations": false,
        "autocomplete_forms": false,
        "windowed_select_control": true,
        "disable_scrollbars": false,
        "flat_scrollbars": true,
        "utf8_url_encoding": true,
        "dpi_aware": false
    }
}
